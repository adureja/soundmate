{
  "manifest_version": 2,

  "name": "Soundmate",
  "description": "Your friend from Soundcloud :)",
  "version": "1.0",

  "browser_action": {
   "default_icon": "/icon.png",
   "default_popup": "/popup.html"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
   "activeTab"
   ]
}